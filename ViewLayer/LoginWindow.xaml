<Window x:Class="TP_Gestion_Contact.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_Gestion_Contact"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="#FF4CB979">
    <Grid>
        <Button x:Name="btLogin" Content="Login" HorizontalAlignment="Left" Height="86" Margin="277,273,0,0" VerticalAlignment="Top" Width="229" FontSize="36" Background="#FF0474E4" Foreground="White" FontWeight="Bold" Click="Button_Click"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="55" Margin="277,72,0,0" VerticalAlignment="Top" Width="229"/>
        <PasswordBox x:Name="tbPassWord" HorizontalAlignment="Left" Height="55" Margin="277,171,0,0" VerticalAlignment="Top" Width="229"/>
        <Label Content="Username" HorizontalAlignment="Left" Height="55" Margin="114,72,0,0" VerticalAlignment="Top" Width="116" FontSize="20" Foreground="#FFFBF9F9" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Height="55" Margin="114,171,0,0" VerticalAlignment="Top" Width="102" FontSize="20" Foreground="#FFFBF9F9" FontWeight="Bold"/>

    </Grid>
</Window>
